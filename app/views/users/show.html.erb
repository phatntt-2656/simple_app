<% provide(:title, t(".profile")) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.nil? %>
          <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
        <% else %>
          <%= gravatar_for @user %>
          <%= @user.name %>
        <% end %>
      </h1>
    </section>
  </aside>
</div>
