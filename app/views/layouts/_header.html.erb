<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.home.title"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.home"), home_path %></li>
        <li><%= link_to t("static_pages.help.help"), help_path %></li>
        <li><%= link_to t("static_pages.about.about"), about_path %></li>
        <li><%= link_to t("eng"), locale: :en %></li>
        <li><%= link_to t("vnese") , locale: :vi %></li>
        <% if logged_in? %>

          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t("header.account") %>
              <%= content_tag(:b, "", class: "caret" )%>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.show.profile"), user_path(current_user) %></li>
              <li><%= link_to t("header.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
              <%= link_to t("header.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sessions.new.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
